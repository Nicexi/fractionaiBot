# 环境配置
NODE_ENV=development  # development, test, production

# API配置
API_BASE_URL=https://api.example.com  # 通用API基础URL

# 线程配置
MAX_WORKERS=5
MAX_TASKS_PER_WORKER=10

# 代理配置
USE_PROXY=true
USE_DYNAMIC_PROXY=true
PROXY_HOST=your-proxy-host.com
PROXY_PORT=1080
PROXY_USERNAME=username
PROXY_PASSWORD=password

# 私钥文件配置
PRIVATE_KEY_FILE=./private_keys.txt  # 每行一个私钥

# 日志配置
LOG_LEVEL=info  # 从info改为debug
LOG_FOLDER=./logs
MAX_LOG_FILES=10
MAX_LOG_SIZE=10485760
CONSOLE_OUTPUT=true
FILE_OUTPUT=true

# 网络请求配置
REQUEST_TIMEOUT=30000
REQUEST_MAX_RETRIES=3
REQUEST_RETRY_DELAY=2000
REQUEST_RATE_LIMIT=20

# 任务配置
STOP_ON_FAILURE=false
DELAY_BETWEEN_TASKS=2000  # 毫秒，或设为true使用随机延迟
TASK_MAX_RETRIES=3
TASK_RETRY_DELAY=2000
TASK_SEQUENCE=fractionAI:verify,fractionAI:getUserAgents,fractionAI:createAgent,fractionAI:disableAutomatedMatchmaking,fractionAI:enableAutomatedMatchmaking

# 错误处理配置
MAX_CONSECUTIVE_ERRORS=5
COOLDOWN_PERIOD=300000  # 冷却期，单位：毫秒，默认5分钟

# FractionAI配置
FRACTION_API_URL=https://api.fractionai.xyz
FRACTION_API3_URL=https://dapp-backend-4x.fractionai.xyz/api3
MATCH_MODE=auto  # auto或manual
MAX_GAMES=50 #最大数量
ENTRY_FEE=0.001  # 创建对战的费用

# 验证码配置
CAPTCHA_SERVICE=2captcha  # 支持2captcha, anticaptcha, capmonster
CAPTCHA_API_KEY=your-captcha-api-key
HCAPTCHA_SITE_KEY=your-site-key
RECAPTCHA_SITE_KEY=your-site-key 
